                # on_release: TODO select from list
                on_release: app.preset_value(ti_key)
            QRScanValueButton:
                on_release: app.scan_value(ti_key)
        TextInput:
            size_hint_y: None
            id: ti_key
            text: root.key
            height: wheight
        
        BoxLayout:
            size_hint_y: None
            height: Wheight
            Label:
